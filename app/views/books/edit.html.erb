<div class="pure-form pure-form-stacked form">
<%= form_for @book do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :author %>
<%= f.text_field :author %>

<%= f.label :genre %>
<%= f.text_field :genre %>

<%= f.label :cover %>
<%= f.file_field :cover %>

<%= f.submit 'Update Book' %>

<% end %>
</div>