<div class="main">
  <div class="pure-form pure-form-stacked">
    <%= form_for @book do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <%= f.label :summary %>
    <%= f.text_field :summary %>

    <%= f.label :cover %>
    <%= f.file_field :cover %>

    <%= f.submit 'Add Book' %>

    <% end %>
  </div>
</div>