<div class="form-wrap">
  <div class="pure-form pure-form-stacked">
    <%= form_for @book do |f| %>
    <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </p>    
    <p>
    <%= f.label :author %>
    <%= f.text_field :author %>
    </p>
    <p>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    </p>
    <p>
    <%= f.label :summary %>
    <%= f.text_field :summary %>
    </p>
    <p>
    <%= f.label :cover %>
    <%= f.file_field :cover %>
    </p>
    <%= f.submit 'Add Book' %>

    <% end %>
  </div>
</div>