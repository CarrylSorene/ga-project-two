<div class="main">

<% @books.each do |book| %>

  <section>

    <h3><%= link_to book.title, book %></h3>
    <h4><%= book.author %></h4>
    
    <p class="cover"><%= image_tag(book.cover.url) %></p>
    
    <h4>Summary: </h4>
    
    <p><%= truncate(book.summary, length: 100) { link_to 'Read more', book } %></p>
    
  </section>

<% end %>
</div>